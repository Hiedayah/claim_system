.modal-dialog
  .modal-content
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      .modal-header
        button.close[type="button" data-dismiss="modal" aria-hidden="true"]
          | Ã—
        h5#myModalLabel
          = params[:action].humanize + " Registration"
      .modal-body

          = f.error_notification
          = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

      .form-inputs
          .row
            .col-md-12
              = f.input :name, required: true, autofocus: true
              <br>
              <br>
              = f.input :no_phone, required: true, autofocus: true
              <br>
              <br>
              = f.input :company, required: true, autofocus: true
              <br>
              <br>
              = f.input :email, required: true, autofocus: true
              <br>
              <br>
              = f.input :bank_account, required: true, autofocus: true
              <br>
              <br>
              = f.input :bank_name, required: true, autofocus: true
              <br>
              <br>
              = f.input :password, required: false, input_html: { autocomplete: "new-password" }
              <br>
              <br>
              = f.input :password_confirmation, required: false, input_html: { autocomplete: "new-password" }
              <br>
              <br>
              = f.input :current_password, required: true, input_html: { autocomplete: "current-password" }
     
      .modal-footer
        button.btn[data-dismiss="modal" aria-hidden="true"]
         | Close
        =f.submit "Update", class: 'btn btn-success'

      <br>
      <br>
        
/div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"

